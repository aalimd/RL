<IfModule mod_rewrite.c>
    RewriteEngine On

    # Block installer, backend source tree, and hidden files
    RewriteRule ^install/ - [F,L]
    RewriteRule ^backend/ - [F,L,NC]
    RewriteRule (^|/)\. - [F,L]

    # Block direct access to operational/debug scripts
    RewriteRule ^(fix_perms(?:_v2)?\.php|test_write\.php)$ - [F,L,NC]

    # Block downloadable database dumps and source archives in web root
    RewriteRule \.(?:sql|zip)$ - [F,L,NC]

    # RewriteBase /
    
    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
    
    # If the request is for an existing file or directory, serve it
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Otherwise, route everything to index.php
    RewriteRule ^ index.php [L]
</IfModule>
