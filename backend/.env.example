APP_NAME="Academic Recommendations"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Set to true after installation
INSTALLED=false

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=recommendation_db
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Session & Cache (file works for most hosting)
SESSION_DRIVER=file
CACHE_STORE=file
# Legacy compatibility (safe to keep)
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Email Configuration (ZeptoMail recommended)
# You can also configure from Admin Panel after installation
MAIL_MAILER=smtp
MAIL_HOST=smtp.zeptomail.com
MAIL_PORT=587
MAIL_USERNAME=emailapikey
MAIL_PASSWORD=null
MAIL_SCHEME=smtp
MAIL_FAILOVER_MAILERS=zeptomail,smtp
MAIL_FROM_ADDRESS="noreply@aalimd.com"
MAIL_FROM_NAME="Dr. Alzahrani EM"

# =============================================
# IMPORTANT NOTES FOR HOSTING:
# =============================================
# 1. Upload files to your server
# 2. Visit https://your-domain.com/install to start the Wizard
# 3. The Wizard will configure the Database & Admin account automatically
# 4. AFTER INSTALLATION (Manual Steps):
#    - Create storage link: php artisan storage:link
